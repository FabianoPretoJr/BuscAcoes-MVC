@model BuscAcoes.Dominio.DTOs.Monitoramento.MonitoramentoOutputDTO

@{
    ViewData["Title"] = "Monitoramento de ações";
    ViewData["PaginaAtiva"] = "monitoramentos";
}

<div class="container-fluid p-0">
    
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-row justify-content-center align-items-center">
                <h1 class="mb-3 text-center flex-fill">Monitoramento de ações</h1>
            </div>
            <div class="card">
                <div class="card-header">
                    <form id="formFiltro" class="d-flex justify-content-center mb-2" method="POST">
                        <div class="d-inline-flex">
                            <div class="form-group" style="margin-left: 22px;">
                                <div class="col">
                                    <label>Código negociação</label>
                                    <input type="text" class="form-control" id="codigoAcao" asp-for="Filtros.CodigoAcao" placeholder="código da ação" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 15px;">
                                <div class="col">
                                    <label>Data inicio</label>
                                    <input type="date" class="form-control" asp-for="Filtros.DataInicio" id="dataInicio" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 15px;">
                                <div class="col">
                                    <label>Data fim</label>
                                    <input type="date" class="form-control" asp-for="Filtros.DataFim" id="dataFim" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-top: 20px; margin-left: 15px;">
                                <div class="col">
                                    <button form="formFiltro" title="Procurar" asp-controller="Monitoramento" type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group" style="margin-top: 20px; margin-left: 15px;">
                                <div class="col">
                                    <button id="limparFiltro" type="button" class="btn btn-danger" title="Limpar">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <table class="table data-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().CodigoNegociacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().PrecoAcao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().PercentualVariacaoCalculada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().PercentualVariacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().DataCriacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monitoramentos.First().AtualizadoEm)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Monitoramentos)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodigoNegociacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrecoAcao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PercentualVariacaoCalculada)%
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PercentualVariacao)%
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataCriacao)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.AtualizadoEm)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/data-table.js" type="text/javascript"></script>
    <script src="~/js/monitoramento.js" type="text/javascript"></script>
}