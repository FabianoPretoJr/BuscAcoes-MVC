@model IEnumerable<BuscAcoes.Dominio.DTOs.Setor.SetorOutputDTO>

@{
    ViewData["Title"] = "Setores";
    ViewData["PaginaAtiva"] = "setores";
}

<div class="container-fluid p-0">

    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-row justify-content-center align-items-center">
                <h1 class="mb-3 text-center flex-fill">Setores</h1>
            </div>
            <div class="card">
                <div class="d-flex flex-row card-header justify-content-center align-items-center">
                    <h5 class="mb-3 flex-fill text-end">
                        <a class="text-success register-button" asp-action="Cadastrar"><i class="fas fa-plus"></i> Cadastrar novo setor</a>
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table data-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ativo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ativo)
                                    </td>
                                    <td class="actions">
                                        <form asp-action="Editar" asp-controller="Setor" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-light-outline text-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </form>
                                        @if (item.Ativo)
                                        {
                                            <form asp-action="Desativar" asp-controller="Setor" asp-route-id="@item.Id" method="post">
                                                <button type="submit" class="btn btn-light-outline text-danger" title="Desativar">
                                                    <i class="fas fa-eye-slash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Ativar" asp-controller="Setor" asp-route-id="@item.Id" method="post">
                                                <button type="submit" class="btn btn-light-outline text-success" title="Ativar">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/data-table.js" type="text/javascript"></script>
}