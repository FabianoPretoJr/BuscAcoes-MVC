@model BuscAcoes.Dominio.DTOs.Setor.SetorInputDTO

@{
    var titulo = (Model.ParaEdicao ? "Edição" : "Cadastro") + " de Setor";
    ViewData["Title"] = titulo;
    ViewData["PaginaAtiva"] = "setores";
}


<div class="container-fluid p-0">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center flex-row">
                        <h3 class="text-start">
                            <a class="text-dark" asp-controller="Setor" asp-action="Index"><i class="fas fa-chevron-left"></i></a>
                        </h3>
                        <h3 class="m-auto">@titulo</h3>
                    </div>
                    <h5 class="mt-1 text-center text-muted">
                        Os campos com <b class="text-danger">*</b> são obrigatórios.
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <form asp-action="Salvar" asp-controller="Setor" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (Model.ParaEdicao)
                            {
                                <input asp-for="Id" class="form-control" type="hidden" />
                            }
                            <div class="form-group mb-3">
                                <label asp-for="Nome" class="control-label"><b class="text-danger">*</b>Nome</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <input type="submit" value="Salvar" class="btn btn-lg btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


