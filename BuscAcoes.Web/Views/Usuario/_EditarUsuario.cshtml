@model BuscAcoes.Dominio.DTOs.Usuario.UsuarioInputDTO

@{
    string returnUrl = Convert.ToString(TempData["ReturnUrl"]);
    if (string.IsNullOrEmpty(returnUrl))
    {
        returnUrl = Url.Action("Index", "Home");
    }
}


<form asp-action="Salvar" asp-controller="Usuario" asp-route-returnUrl="@returnUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (Model.ParaEdicao)
    {
        <input asp-for="IdUsuario" class="form-control" type="hidden" />
    }
    <input asp-for="IdPerfil" class="form-control" type="hidden" />
    <div class="form-group mb-3">
        <label asp-for="Nome" class="control-label"><b class="text-danger">*</b>Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="mb-3 col-md-6">
            <label asp-for="Login" class="control-label"><b class="text-danger">*</b> Login</label>
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="Senha" class="control-label"><b class="text-danger">*</b> Senha</label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
            @if (Model.ParaEdicao)
            {
                <div id="passwordHelp" class="form-text">Deixe em branco para não mudar a senha.</div>
            }
        </div>
    </div>
    <div class="form-group d-flex justify-content-center">
        <input type="submit" value="Salvar" class="btn btn-lg btn-primary" />
    </div>
</form>